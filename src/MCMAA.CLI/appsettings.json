{
  "AI": {
    "Models": {
      "lightweight": "phi3:mini",
      "standard": "phi3:mini",
      "advanced": "phi3:3.8b-mini-4k-instruct-q4_0"
    },
    "TaskModels": {
      "summary": "lightweight",
      "quick": "lightweight",
      "conflicts": "standard",
      "performance": "standard",
      "full": "advanced"
    },
    "OllamaBaseUrl": "http://localhost:11434",
    "DefaultTemperature": 0.7,
    "MaxTokens": 4096,
    "EnableStreaming": true
  },
  "Cache": {
    "Enabled": true,
    "MaxSizeMb": 500,
    "ExpiryDays": 7,
    "HashAlgorithm": "sha256",
    "CacheDirectory": "cache",
    "EnableStatistics": true,
    "CleanupIntervalHours": 24
  },
  "Timeouts": {
    "RequestStandard": 600,
    "RequestLarge": 900,
    "RequestComplex": 1200,
    "MaxRetries": 3,
    "BaseDelayMs": 2000,
    "MaxDelayMs": 15000,
    "ConnectionTimeout": 90
  },
  "Metrics": {
    "Enabled": true,
    "RetentionDays": 7,
    "CleanupIntervalHours": 1,
    "ExportDirectory": "metrics",
    "EnablePerformanceTracking": true,
    "PerformanceRetentionHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "MCMAA": "Debug"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "logs/mcmaa-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "EnableStructuredLogging": true
    }
  }
}
